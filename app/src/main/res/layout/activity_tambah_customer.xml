<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tambah_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alfianhadipratama.sistemparkir.Customer.TambahCustomer">

    <TextView
        android:text="ADD COSTUMER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/judulaja"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtnya_histori_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plat Number"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/judulaja"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txt_edit_plat_cus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:layout_below="@+id/txtnya_histori_owner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <requestFocus />
    </EditText>

    <TextView
        android:text="Owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nama_cus"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/txt_edit_plat_cus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_edit_nama_cus"
        android:layout_below="@+id/txt_nama_cus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/txt_barcode_cus"
        android:layout_below="@+id/txt_edit_nama_cus"
        android:layout_alignLeft="@+id/txt_nama_cus"
        android:layout_alignStart="@+id/txt_nama_cus" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_sibarcode"
        android:layout_marginTop="19dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/txt_barcode_cus"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btn_save_cus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_save"
        android:background="#00000000"
        android:layout_alignTop="@+id/btn_cancel_cus"
        android:layout_toRightOf="@+id/txt_barcode_cus"
        android:layout_toEndOf="@+id/txt_barcode_cus" />

    <ImageButton
        android:id="@+id/btn_cancel_cus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_cancel"
        android:background="#00000000"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/txt_sibarcode"
        android:layout_alignRight="@+id/judulaja"
        android:layout_alignEnd="@+id/judulaja" />


</RelativeLayout>


